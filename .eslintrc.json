{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/eslint-recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": [
    "dist/**/*.js", 
    "examples/**/*.js", 
    "examples/**/*.ts",
    "minified/**/*.js",
    "scripts/**/*.js",
    "third_party/**/*.js",
    "third_party/**/*.ts",
    "webpack.config.js"
  ],
  "rules": {
    "@typescript-eslint/no-this-alias": "warn"
  }
}
